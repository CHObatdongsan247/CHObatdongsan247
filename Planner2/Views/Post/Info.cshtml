            type: "POST",
            url: "/Post/GuiPhanHoi",
            data: {
                TaskID      :'@Model.Id'  ,
                HoTen      :HoTen         ,
                DienThoai  :DienThoai     ,
                NOIDUNG    :NOIDUNG       ,
                Email      :Email        ,
                DiaChi     :DiaChi        ,
                TieuDe     :TieuDe        ,
                MucDich    :MucDich
