        var NOIDUNG      = $('#NOIDUNG').val();
        var DiaChi       = $('#DiaChi').val();
        var TieuDe       = $('#TieuDe').val();
        var Email      = $('#Email').val();
        var MucDich      = $('#MucDich').val();
