@{ 

    var nguoidung = (Planner2.Models.User)Session[Planner2.Controllers.LoginAuth.NameSession];

}
<form class="form-horizontal" action="/Profile/Edit" method="post" enctype="multipart/form-data">
    <div class="form-group ">
        <label for="inputName" class="col-sm-2 col-form-label">Họ tên</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="StaffName" value="@nguoidung.StaffName" >
        </div>
    </div>
    <div class="form-group ">
        <label for="inputEmail" class="col-sm-2 col-form-label">Số điện thoại</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="SDT" value="@nguoidung.SDT">
        </div>
    </div>
    <div class="form-group ">
        <label for="inputName2" class="col-sm-2 col-form-label">Địa chỉ</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" name="DiaChi"  value="@nguoidung.DiaChi">
        </div>
    </div>
    <div class="form-group ">
        <label for="inputExperience" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" name="Email" value="@nguoidung.Email">
        </div>
    </div>
    <div class="form-group ">
        <label for="inputSkills" class="col-sm-2 col-form-label">Ảnh đại diện</label>
        <div class="col-sm-10">
            <input type="file" class="form-control" name="AvartaImg"  >
        </div>
    </div>
     
    <div class="form-group ">
        <div class=" col-sm-10">
            <button type="submit" class="btn btn-danger">Lưu thông tin</button>
        </div>
    </div>
</form>
